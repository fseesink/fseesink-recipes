<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Description</key>
        <string>Download recipe for Hugo.</string>
        <key>Identifier</key>
        <string>com.github.fseesink.download.Hugo</string>
        <key>Input</key>
        <dict>
            <key>NAME</key>
            <string>Hugo</string>
            <key>DOWNLOAD_ARCH</key>
            <string>universal</string>
            <key>HUGO_EDITION</key>
            <string>hugo</string>
            <!-- <string>hugo_extended</string> -->
            <!-- <string>hugo_extended_withdeploy</string> -->
        </dict>
        <key>MinimumVersion</key>
        <string>0.4.1</string>
        <key>Process</key>
        <array>
            <dict>
                <key>Processor</key>
                <string>GitHubReleasesInfoProvider</string>
                <key>Arguments</key>
                <dict>
                    <key>asset_regex</key>
                    <string>%HUGO_EDITION%_(?P&lt;version&gt;[0-9\.]*)_darwin-%DOWNLOAD_ARCH%.pkg</string>
                    <key>github_repo</key>
                    <string>gohugoio/hugo</string>
                    <key>latest_only</key>
                    <string>true</string>
                </dict>
            </dict>
            <dict>
                <key>Processor</key>
                <string>URLDownloader</string>
                <key>Arguments</key>
                <dict>
                    <key>filename</key>
                    <string>%NAME%-%version%.pkg</string>
                </dict>
            </dict>
            <dict>
                <key>Processor</key>
                <string>EndOfCheckPhase</string>
            </dict>
        </array>
    </dict>
</plist>
